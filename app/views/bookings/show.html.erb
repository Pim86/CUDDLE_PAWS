<div class="vh-100">

  <%= link_to bookings_path, class: "btn btn-back mt-5 ms-3" do %>
    <i class="fa-solid fa-chevron-left" style="color: #ffffff;"></i>
    <i class="fa fa-paw" aria-hidden="true"></i>
  <% end %>

  <div class="card-pet-profile d-flex flex-column align-items-center justify-content-center pt-3 text-center" style="height: 600px; width: 350px; margin: 0 auto;">
    <h1 class="fs-2" style="color: #000000;"><%= @booking.pet.name%></h1>
    <p><%= @booking.user.full_name%></p>
    <p class="fs-4">Location: <%= @booking.location%></p>
    <p class="fs-4">Starts on: <%= @booking.start_date_time%></p>
    <p class="fs-4">Finished at: <%= @booking.end_date_time%></p>
    <div class="mt-3">
      <%= link_to edit_booking_path(@booking) do%>
        <i class="fa-solid fa-pencil fa-xl" style="color: #F4BFBF; margin-right: 10px;"></i>
      <% end %>

      <%= link_to booking_path(@booking),  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
        <i class="fa-solid fa-trash fa-xl" style="color: #F4BFBF; margin-right: 10px; "></i>
      <% end %>
    </div>
  </div>
</div>
