<%= simple_form_for(@user, url: new_user_registration_path) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :address %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  </div>

<div class="btn btn-flat form-action">
  <%= f.button :submit %> or <%= link_to 'cancel', root_path %>
</div>
<% end %>
