<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>


<h1>Pets list!</h1>

<div class="container py-5">
  <div class="row d-flex align-items-center justify-content-between mb-3">
    <% @pets.each do |pet| %>
      <div class="col-12 col-sm-6 col-md-4 card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <h2><%= pet.name %></h2>
          <p><%= pet.age %> <%= 'years old' %> </p>
          <p><%= pet.species.capitalize %></p>
          <p><%= pet.breed.capitalize %></p>
          <p><%= pet.image_url %></p>
          <%= link_to 'show pet', pet_path(pet) %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'create a pet', new_pet_path %>
