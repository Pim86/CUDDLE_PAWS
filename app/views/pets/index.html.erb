<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

<div class="">
  <h1>Pets </h1>

  <div class="container py-5">
    <div class="row justify-content-center justify-content-md-between mb-3">
      <% @pets.each do |pet| %>
        <div class="col-12 col-sm-6 col-md-4 card-product">
          <%= image_tag(pet.image_url) %>
          <div class="card-product-infos">
            <h2><%= pet.name %></h2>
            <p><%= pet.age %> <%= 'years old' %> </p>
            <p><%= pet.breed.capitalize %></p>
            <button class="btn btn-flat">
              <%= link_to "#{pet.name}'s profile", pet_path(pet) %>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <button class="btn btn-flat">
    <%= link_to 'Add a new pet', new_pet_path %>
  </button>
</div>
