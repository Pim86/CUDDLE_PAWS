<%= simple_form_for(@pet) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div>
    <%= f.input :name %>
    <div class="drop-down">
    <%= f.input :species, as: :select, collection: ['cats', 'dogs'], prompt: 'Select species' %>
    </div>
    <%= f.input :breed %>
    <%= f.input :age %>
    <%= f.input :image_url, as: :file %>
  </div>

<div class="btn btn-flat form-action">
  <%= f.button :submit %>
</div>
<% end %>
